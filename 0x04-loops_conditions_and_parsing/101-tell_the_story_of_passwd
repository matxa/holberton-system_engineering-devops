#!/usr/bin/env bash
# This script is displaying "Holberton School" 10 times

input="/etc/passwd"
while IFS= read -r line
do
    echo "The user $line is part of the $line gang, lives in $line and rides $line. $line's place is protected by the passcode $line, more info about the user here: $line " | cut -d':' -f 1,4,6,7,2,1
done < "$input"
